{
  "name": "icyEE",
  "version": "1.0",
  "manifest_version": 2,
  "description": "The webpage English terms level analysic tool.",
  "browser_action": {
    "default_icon": "icon.png"
    // , "default_popup": "popup.html"
  },
  "background": {
    // "page": "background.html"
    "scripts": ["background.js"]
    // "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["http://*/*"],
      "js": ["jquery.js", "underscore-min.js", "english-7000.js", "GRE_1000_basic.js", "GRE_500_advance.js", "eee.js"]
    }
  ],
  "permissions": [
    "tabs", "http://*/*", "https://*/*"
  ]
}


